@Html.ActionLink("Add Product", "Create")
<table class="table">
    <tr>
        <th>Product</th>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
    </tr>
    @foreach (var item in ViewBag.Products)
    {
        <tr>
            <td>
                <img src="@item.Logo" width="100" />
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                @item.Price @item.Currency
            </td>
            <td>
                @Html.ActionLink("Buy", "#", new { id = item.Id }) |
                @Html.ActionLink("To Cart", "#", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
