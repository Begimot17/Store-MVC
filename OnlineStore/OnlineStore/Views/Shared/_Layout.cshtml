<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
          <nav class="navbar navbar-expand-lg navbar-light bg-light">
              <a class="navbar-brand" href="#">
                  @Html.ActionLink("Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
              </a>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                  <div class="navbar-nav">
                      <a class="nav-item nav-link active" href="#">@Html.ActionLink("Cart", "About", "Home") <span class="sr-only">(current)</span></a>
                      <a class="nav-item nav-link" href="#">@Html.ActionLink("Products", "Index", "Products")</a>
                      <a class="nav-item nav-link" href="#">@Html.ActionLink("About", "About", "Home")</a>
                      <a class="nav-item nav-link disabled" href="#">@Html.ActionLink("Users", "Index", "User")</a>
                      <a class="nav-item nav-link disabled" href="#">@Html.ActionLink("Login", "Login", "Account")</a>
                      <a class="nav-item nav-link disabled" href="#">@Html.ActionLink("Register", "Register", "Account")</a>
                      <a class="nav-item nav-link disabled" href="#">@Html.ActionLink("Logout", "Logout", "Account")</a>



                  </div>
              </div>
          </nav>
    </header>
    
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Supa Dupa Store</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
