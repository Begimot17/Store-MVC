@model OnlineStore.Models.UsersViewModel

@{
                /**/

                ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "User", new { searchQuery = Model.SearchQuery }, FormMethod.Get))
{
    <div>
        @Html.LabelFor(x => x.SearchQuery)
        @Html.TextBoxFor(x => x.SearchQuery, htmlAttributes: new { placeholder = "Search..." })

        <input type="submit" value="Search" />
    </div>
}


<table class="table">
    <tr>
        <th>Login</th>
        <th>Email</th>
        <th>Password</th>
    </tr>
    @foreach (var item in Model.Users)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Password
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details" ,new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
